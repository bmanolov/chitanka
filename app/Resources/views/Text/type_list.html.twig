{% import 'helper.html.twig' as helper %}
<ul class="two-columns">
{% for type in types %}
	<li>
		{% if type.nrOfTexts > 0 %}
			<a href="{{ path('texts_by_type', {'type': type.code}) }}" data-edit="{{ path('admin_text_type_edit', {'id': type.code}) }}">{{ type }}</a>
			<span class="badge nr-of-items" title="{{ 'tooltip.nr-of-texts-with-type'|transchoice(type.nrOfTexts, {'%type%': type.name}) }}">{{ type.nrOfTexts }}</span>
		{% else %}
			{{ type }}
		{% endif %}
		{{ helper.infoTip(type.description) }}
	</li>
{% endfor %}
</ul>
